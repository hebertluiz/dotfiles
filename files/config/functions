
source ~/scripts/wait_process.sh
#### APT functions

function aptu () {
    sudo apt update -y -q 2>&1 >/dev/null &
    wait_process $! "Waiting for package update"
}

function apti () {

    printf 'Installing Packages:\n' >&2
    printf '\t* %s\n' "$@" 
    sudo apt install "$@" -y -q 2>&1 >/dev/null &
    wait_process $! "Waiting for package update"
}